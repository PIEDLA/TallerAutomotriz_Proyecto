@page
@model asp_presentacion.Pages.Ventanas.ProveedoresModel
@{
    ViewData["Titulo"] = "";
}
<center>
    <div>
        <form method="POST"
              enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div class="table-container">
                <div class="table-header">
                    <h3 class="table-title">Gestión de Proveedores</h3>
                    <div class="table-actions">
                        <button class="btn btn-primary btn-sm"
                                asp-page-handler="BtNuevo"
                                disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)">
                            + Registrar Proveedor
                        </button>
                        <button class="btn btn-primary btn-sm"
                                asp-page-handler="BtExportar"
                                disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)">
                            📊 Exportar
                        </button>
                        <button class="btn btn-primary btn-sm"
                                asp-page-handler="BtRefrescar"
                                disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)">
                            ↺ Refrescar
                        </button>
                    </div>
                </div>    
            </div>

            @if (Model!.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                        Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <div style="padding: 24px;">
                    <div class="search-bar">
                        <input id="flNIT"
                               type="text" class="search-input"
                               placeholder="NIT"
                               asp-for="@Model.Filtro!.NIT">
                        <button class="btn btn-secondary btn-sm" asp-page-handler="BtRefrescar">🔍 Buscar</button>
                    </div>
                </div>
            }

            <div align="left">
                <h3>Proveedores</h3>
            </div>

            @if (Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                        Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden"
                       asp-for="@Model.Actual!.Id" />
            }
            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {


                <input type="hidden"
                       asp-for="@Model.Actual!.Nombre" />
                <input type="hidden"
                       asp-for="@Model.Actual!.NIT" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Telefono" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Correo" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Direccion" />
            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Editar)
            {
                <div class='popup'>
                    <div class='pp_del_inner'>
                        <div style='width:95%'>
                            <div class="containers_vn panel panel-default">
                                <h3>Proveedores</h3>

                                <div>
                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">
                                            Nombre
                                        </label>
                                        <div class="col-lg-6">
                                            <input id="nmNombre"
                                                   class="cts_forms form-control"
                                                   asp-for="@Model.Actual!.Nombre" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">
                                            NIT
                                        </label>
                                        <div class="col-lg-6">
                                            <input id="nmNIT"
                                                   class="cts_forms form-control"
                                                   asp-for="@Model.Actual!.NIT" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">
                                            Telefono
                                        </label>
                                        <div class="col-lg-6">
                                            <input id="nmTelefono"
                                                   class="cts_forms form-control"
                                                   asp-for="@Model.Actual!.Telefono" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">
                                            Correo
                                        </label>
                                        <div class="col-lg-6">
                                            <input id="nmCorreo"
                                                   class="cts_forms form-control"
                                                   asp-for="@Model.Actual!.Correo" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">
                                            Direccion
                                        </label>
                                        <div class="col-lg-6">
                                            <input id="nmDireccion"
                                                   class="cts_forms form-control"
                                                   asp-for="@Model.Actual!.Direccion" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button class="btn btn-primary btn-sm"
                                    asp-page-handler="BtGuardar"
                                    disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)">
                                ✓ Guardar
                            </button>
                            <button class="btn btn-primary btn-sm"
                                    asp-page-handler="BtCancelar"
                                    disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)">
                                ✕ Cancelar
                            </button>
                        </div>
                    </div>
                </div>
            }

            @if (ViewData.ContainsKey("Mensaje"))
            {
                <input type="hidden"
                       asp-for="@Model.Accion" />
                @await Html.PartialAsync("../Emergentes/Mensajes.cshtml")
                ;
            }

            @if (Model!.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <div class='popup'>
                    <div class='pp_del_inner'>
                        <div style='width:95%'>
                            <h2 align="left">
                                Mensaje
                            </h2>

                            <h4 align="left">
                                ¿Desea borrar el proveedor @Model.Actual!.Nombre?
                            </h4>
                            <h6 align="left">
                                NIT @Model.Actual!.Nombre
                            </h6>
                            <br />
                            <br />
                            <input type="submit"
                                   value="Borrar"
                                   asp-page-handler="BtBorrar"
                                   class="btn btn-secondary" />
                            <input type="submit"
                                   value="Cerrar"
                                   asp-page-handler="BtCancelar"
                                   class="btn btn-secondary" />
                        </div>
                    </div>
                </div>
            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                        Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <div class="containers_vn panel panel-default">
                    <table class="tb_data table table-striped table-bordered table hover">
                        <tr>
                            <th>
                                Nombre
                            </th>
                            <th>
                                NIT
                            </th>
                            <th>
                                Telefono
                            </th>
                            <th>
                                Correo
                            </th>
                            <th>
                                Direccion
                            </th>
                            <th class="cl_actions">
                                Accion
                            </th>
                        </tr>
                        @if (Model != null && Model.Lista != null)
                        {
                            @foreach (var elemento in Model.Lista)
                            {
                                <tr>
                                    <td>
                                        @elemento.Nombre
                                    </td>
                                    <td>
                                        @elemento.NIT
                                    </td>
                                    <td>
                                        @elemento.Telefono
                                    </td>
                                    <td>
                                        @elemento.Correo
                                    </td>
                                    <td>
                                        @elemento.Direccion
                                    </td>
                                    <td>
                                        <div class="action-buttons">
                                            <button class="btn-icon" title="Editar" asp-page-handler="BtModificar" asp-route-data="@elemento.Id">✏️</button>
                                            <button class="btn-icon" title="Eliminar" asp-page-handler="BtBorrarVal" asp-route-data="@elemento.Id">🗑️</button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </table>
                </div>
            }
        </form>
    </div>
</center>