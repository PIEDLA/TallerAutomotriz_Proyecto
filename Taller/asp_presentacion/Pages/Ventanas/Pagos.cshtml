@page
@model asp_presentacion.Pages.Ventanas.PagosModel
@{
    ViewData["Titulo"] = "";
}

<center>
    <div>
        <form method="POST" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div align="left">
                <h3>Pagos</h3>
            </div>

            <div align="left" class="bt_panel_buttons">
                <input type="submit" value="Refrescar" asp-page-handler="BtRefrescar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit" value="Nuevo" asp-page-handler="BtNuevo"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit" value="Guardar" asp-page-handler="BtGuardar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit" value="Cancelar" asp-page-handler="BtCancelar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
            </div>

            @if (Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                        Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden" asp-for="@Model.Actual!.Id" />
            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden" asp-for="@Model.Actual!.Id_factura" />
                <input type="hidden" asp-for="@Model.Actual!.Monto_total" />
                <input type="hidden" asp-for="@Model.Actual!.Fecha_pago" />
                <input type="hidden" asp-for="@Model.Actual!.Estado" />
            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Editar)
            {
                <div class="containers_vn panel panel-default">
                    <h3>Pagos</h3>

                    <div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">Factura ID</label>
                            <div class="col-lg-6">
                                <input class="cts_forms form-control" asp-for="@Model.Actual!.Id_factura" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-4 control-label">Monto total</label>
                            <div class="col-lg-6">
                                <input class="cts_forms form-control" asp-for="@Model.Actual!.Monto_total" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-4 control-label">Fecha de pago</label>
                            <div class="col-lg-6">
                                <input type="date" class="cts_forms form-control" asp-for="@Model.Actual!.Fecha_pago" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-4 control-label">Estado</label>
                            <div class="col-lg-6">
                                <select class="cts_forms form-control" asp-for="@Model.Actual!.Estado">
                                    <option value="">Seleccione...</option>
                                    <option value="Pendiente">Pendiente</option>
                                    <option value="Pagado">Pagado</option>
                                    <option value="Cancelado">Cancelado</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            }

            @if (ViewData.ContainsKey("Mensaje"))
            {
                <input type="hidden" asp-for="@Model.Accion" />
                @await Html.PartialAsync("../Emergentes/Mensajes.cshtml")
            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <div class='popup'>
                    <div class='pp_del_inner'>
                        <div style='width:95%'>
                            <h2 align="left">Mensaje</h2>
                            <h4 align="left">Desea borrar el pago?</h4>
                            <h6 align="left">ID Factura: @Model.Actual!.Id_factura - Monto: @Model.Actual!.Monto_total</h6>
                            <br /><br />
                            <input type="submit" value="Borrar" asp-page-handler="BtBorrar" class="btn btn-secondary" />
                            <input type="submit" value="Cerrar" asp-page-handler="BtCancelar" class="btn btn-secondary" />
                        </div>
                    </div>
                </div>
            }


            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)
            {
                <div class="containers_vn panel panel-default" style="margin-bottom:20px;">
                    <h4>Resumen Pagos</h4>
                    <p><strong>Total de Pagos Registrados:</strong> @Model.TotalPagos</p>
                    @if (Model.UltimoPago != null)
                    {
                        <p>
                            <strong>Último Pago:</strong> @Model.UltimoPago.Fecha_pago.ToShortDateString()
                            - Monto: @Model.UltimoPago.Monto_total
                            - Estado: @Model.UltimoPago.Estado
                        </p>
                    }
                </div>
            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                        Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <div class="containers_vn panel panel-default">
                    <h4>Filtros</h4>

                    <input class="cts_forms form-control" asp-for="@Model.Filtro!.Id_factura" placeholder="ID Factura (opcional)" />
                    <br />
                    <input class="cts_forms form-control" asp-for="@Model.Filtro!.Monto_total" placeholder="Monto (opcional)" />
                    <br />
                    <input type="date" class="cts_forms form-control" asp-for="@Model.Filtro!.Fecha_pago" />
                    <br />
                    <select asp-for="@Model.Filtro!.Estado" class="cts_forms form-control">
                        <option value="">-- Estado --</option>
                        <option value="Pendiente">Pendiente</option>
                        <option value="Pagado">Pagado</option>
                        <option value="Cancelado">Cancelado</option>
                    </select>
                    <br />

                    <table class="tb_data table table-striped table-bordered table-hover">
                        <tr>
                            <th>ID Factura</th>
                            <th>Monto Total</th>
                            <th>Fecha de Pago</th>
                            <th>Estado</th>
                            <th class="cl_actions">Accion</th>
                        </tr>

                        @if (Model.Lista != null)
                        {
                            @foreach (var p in Model.Lista)
                            {
                                <tr>
                                    <td>@p.Id_factura</td>
                                    <td>@p.Monto_total</td>
                                    <td>@p.Fecha_pago.ToShortDateString()</td>
                                    <td>@p.Estado</td>
                                    <td>
                                        <input type="submit" value="Modificar" asp-page-handler="BtModificar"
                                               class="btn btn-secondary" asp-route-data="@p.Id" />
                                        <input type="submit" value="Borrar" asp-page-handler="BtBorrarVal"
                                               class="btn btn-secondary" asp-route-data="@p.Id" />
                                    </td>
                                </tr>
                            }
                        }
                    </table>
                </div>
            }

        </form>
    </div>
</center>
