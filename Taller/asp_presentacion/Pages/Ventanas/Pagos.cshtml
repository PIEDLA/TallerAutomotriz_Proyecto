@page
@model asp_presentacion.Pages.Ventanas.PagosModel
@{
    ViewData["Titulo"] = "";
}
<center>
    <div>
        <form method="POST"
              enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div align="left">
                <h3>Pagos</h3>
            </div>
            <div align="left"
                 class="bt_panel_buttons">
                <input type="submit"
                       value="Refrescar"
                       asp-page-handler="BtRefrescar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Nuevo"
                       asp-page-handler="BtNuevo"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Guardar"
                       asp-page-handler="BtGuardar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Cancelar"
                       asp-page-handler="BtCancelar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
            </div>

            @if (Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                        Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden"
                       asp-for="@Model.Actual!.Id" />
            }
            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden"
                       asp-for="@Model.Actual!.Id_factura" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Monto_total" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Fecha_pago" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Estado" />
            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Editar)
            {
                <div class="containers_vn panel panel-default">
                    <h3>Pagos</h3>

                    <div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                ID Factura
                            </label>
                            <div class="col-lg-6">
                                <input id="nmId_factura"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.Id_factura" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Monto Total
                            </label>
                            <div class="col-lg-6">
                                <input id="nmMonto_total"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.Monto_total" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Fecha de Pago
                            </label>
                            <div class="col-lg-6">
                                <input id="nmFecha_pago"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.Fecha_pago" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Estado
                            </label>
                            <div class="col-lg-6">
                                <input id="nmEstado"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.Estado" />
                            </div>
                        </div>
                    </div>
                </div>
            }

            @if (ViewData.ContainsKey("Mensaje"))
            {
                <input type="hidden"
                       asp-for="@Model.Accion" />
                @await Html.PartialAsync("../Emergentes/Mensajes.cshtml")
                ;
            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <div class='popup'>
                    <div class='pp_del_inner'>
                        <div style='width:95%'>
                            <h2 align="left">
                                Mensaje
                            </h2>

                            <h4 align="left">
                                ¿Desea borrar el pago de la factura **@Model.Actual!.Id_factura**?
                            </h4>
                            <h6 align="left">
                                Monto: @Model.Actual!.Monto_total
                            </h6>
                            <br />
                            <br />
                            <input type="submit"
                                   value="Borrar"
                                   asp-page-handler="BtBorrar"
                                   class="btn btn-secondary" />
                            <input type="submit"
                                   value="Cerrar"
                                   asp-page-handler="BtCancelar"
                                   class="btn btn-secondary" />
                        </div>
                    </div>
                </div>
            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                        Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <div class="containers_vn panel panel-default">
                    <h4>Filtros</h4>


                    <input id="flId_factura"
                           class="cts_forms form-control"
                           asp-for="@Model.Filtro!.Id_factura"
                           placeholder="ID Factura" />
                    <br />

                    <input id="flFecha_pago"
                           class="cts_forms form-control"
                           asp-for="@Model.Filtro!.Fecha_pago"
                           placeholder="Fecha de Pago" />
                    <br />

                    <input id="flEstado"
                           class="cts_forms form-control"
                           asp-for="@Model.Filtro!.Estado"
                           placeholder="Estado" />
                    <br />


                    <table class="tb_data table table-striped table-bordered table hover">
                        <tr>
                            <th>ID Factura</th>
                            <th>Monto Total</th>
                            <th>Fecha de Pago</th>
                            <th>Estado</th>
                            <th class="cl_actions">Accion</th>
                        </tr>
                        @if (Model != null && Model.Lista != null)
                        {
                            @foreach (var elemento in Model.Lista)
                            {
                                <tr>
                                    <td>@elemento.Id_factura</td>
                                    <td>@elemento.Monto_total</td>
                                    <td>@elemento.Fecha_pago</td>
                                    <td>@elemento.Estado</td>
                                    <td>
                                        <input type="submit"
                                               value="Modificar"
                                               asp-page-handler="BtModificar"
                                               class="btn btn-secondary"
                                               asp-route-data="@elemento.Id" />
                                        <input type="submit"
                                               value="Borrar"
                                               asp-page-handler="BtBorrarVal"
                                               class="btn btn-secondary"
                                               asp-route-data="@elemento.Id" />
                                    </td>
                                </tr>
                            }
                        }
                    </table>
                </div>
            }
        </form>
    </div>
</center>