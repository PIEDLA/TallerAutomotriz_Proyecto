@page
@model asp_presentacion.Pages.Ventanas.VehiculosModel
@{
    ViewData["Titulo"] = "";
}
<center>
    <div>
        <form method="POST"
              enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div class="table-container">
                <div class="table-header">
                    <h3 class="table-title">Gestión de Vehículos</h3>
                    <div class="table-actions">
                        <button class="btn btn-primary btn-sm"
                                asp-page-handler="BtNuevo"
                                disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)">
                            + Registrar Vehículo
                        </button>
                        <button class="btn btn-primary btn-sm"
                                asp-page-handler="BtExportar"
                                disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)">
                            📊 Exportar
                        </button>
                        <button class="btn btn-primary btn-sm"
                                asp-page-handler="BtRefrescar"
                                disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)">
                            ↺ Refrescar
                        </button>
                    </div>
                </div>
            </div>

            @if (Model!.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
            Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <div style="padding: 24px;">
                    <div class="search-bar">
                        <input id="flPlaca"
                        type="text" class="search-input"
                        placeholder="Placa"
                        asp-for="@Model.Filtro!.Placa">
                        <button class="btn btn-secondary btn-sm" asp-page-handler="BtRefrescar">🔍 Buscar</button>
                    </div>
                </div>
            }

            <div align="left">
                <h3>Vehiculos</h3>
            </div>

            @if (Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                        Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden"
                       asp-for="@Model.Actual!.Id" />
            }
            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {


                <input type="hidden"
                       asp-for="@Model.Actual!.Id_cliente" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Placa" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Marca" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Modelo" />
            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Editar)
            {
                <div class='popup'>
                    <div class='pp_del_inner'>
                        <div style='width:95%'>
                            <div class="containers_vn panel panel-default">
                                <h3>Vehiculos</h3>

                                <div>
                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">
                                            Id_cliente
                                        </label>
                                        <div class="col-lg-6">
                                            <input id="nmId_cliente"
                                                   class="cts_forms form-control"
                                                   asp-for="@Model.Actual!.Id_cliente" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">
                                            Placa
                                        </label>
                                        <div class="col-lg-6">
                                            <input id="nmPlaca"
                                                   class="cts_forms form-control"
                                                   asp-for="@Model.Actual!.Placa" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">
                                            Marca
                                        </label>
                                        <div class="col-lg-6">
                                            <input id="nmMarca"
                                                   class="cts_forms form-control"
                                                   asp-for="@Model.Actual!.Marca" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">
                                            Modelo
                                        </label>
                                        <div class="col-lg-6">
                                            <input id="nmModelo"
                                                   class="cts_forms form-control"
                                                   asp-for="@Model.Actual!.Modelo" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="table-actions">
                                <button class="btn btn-primary btn-sm"
                                        asp-page-handler="BtGuardar"
                                        disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)">
                                    ✓ Guardar
                                </button>
                                <button class="btn btn-primary btn-sm"
                                        asp-page-handler="BtCancelar"
                                        disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)">
                                    ✕ Cancelar
                                </button>
                            </div>
                            
                        </div>
                    </div>
                </div>
            }

            @if (ViewData.ContainsKey("Mensaje"))
            {
                <input type="hidden"
                       asp-for="@Model.Accion" />
                @await Html.PartialAsync("../Emergentes/Mensajes.cshtml")
                ;
            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <div class='popup'>
                    <div class='pp_del_inner'>
                        <div style='width:95%'>
                            <h2 align="left">
                                Mensaje
                            </h2>

                            <h4 align="left">
                                ¿Desea borrar el vehículo con placa @Model.Actual!.Placa?
                            </h4>
                            <br />
                            <br />
                            <div class="table-actions">
                                <input type="submit"
                                       value="Borrar"
                                       asp-page-handler="BtBorrar"
                                       class="btn btn-secondary" />
                                <input type="submit"
                                       value="Cerrar"
                                       asp-page-handler="BtCancelar"
                                       class="btn btn-secondary" />
                            </div>
                        </div>
                    </div>
                </div>
            }

            @if (Model!.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Sublistas)
            {
                <div class='popup'>
                    <div class='pp_del_inner'>
                        <div style='width:95%'>
                            <h2 align="left">
                                Diagnósticos del vehículo con placa @Model.Actual!.Placa
                            </h2>
                            <br>

                            <div class="containers_vn panel panel-default">
                                <table class="tb_data table table-striped table-bordered table hover">
                                    <thead>
                                        <tr>
                                            <th>Empleado</th>
                                            <th>Descripción</th>
                                            <th>Fecha</th>
                                        </tr>
                                    </thead>
                                    <tbody id="vervehiculosTable">
                                        @if (Model != null && Model.ListaD != null)
                                        {
                                            @foreach (var elemento in Model.ListaD)
                                            {
                                                <tr>
                                                    <td>
                                                        @elemento._Empleado!.Nombre @elemento._Empleado!.Apellido
                                                    </td>
                                                    <td>
                                                        @elemento.Descripcion
                                                    </td>
                                                    <td>
                                                        @elemento.Fecha.ToString("dd/MM/yyyy")
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <input type="submit"
                                   value="Cerrar"
                                   asp-page-handler="BtCancelar"
                                   class="btn btn-secondary" />
                        </div>
                    </div>
                </div>
            }

            @if (Model!.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                        Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <div class="containers_vn panel panel-default">
                    <table class="tb_data table table-striped table-bordered table hover">
                        <thead>
                            <tr>
                                <th>Placa</th>
                                <th>Marca</th>
                                <th>Modelo</th>
                                <th>Cliente</th>
                                <th>Historial de diagnósticos</th>
                                <th class="cl_actions">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Lista != null)
                            {
                                @foreach (var elemento in Model.Lista)
                                {
                                    <tr>
                                        <td>
                                            @elemento.Placa
                                        </td>
                                        <td>
                                            @elemento.Marca
                                        </td>
                                        <td>
                                            @elemento.Modelo
                                        </td>
                                        <td>
                                            @elemento._Cliente!.Nombre @elemento._Cliente!.Apellido
                                        </td>
                                        <td>
                                            <button class="btn-icon" title="Ver diagnósticos" asp-page-handler="BtVerDiag" asp-route-id="@elemento.Id">Ver Historial de Diagnósticos</button>
                                        </td>
                                        <td>
                                            <div class="action-buttons">
                                                <button class="btn-icon" title="Editar" asp-page-handler="BtModificar" asp-route-data="@elemento.Id">✏️</button>
                                                <button class="btn-icon" title="Eliminar" asp-page-handler="BtBorrarVal" asp-route-data="@elemento.Id">🗑️</button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            } 
                        </tbody>
                    </table>
                </div>
            }
        </form>
    </div>
</center>