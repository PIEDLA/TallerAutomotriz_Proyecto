@page
@model asp_presentacion.Pages.Ventanas.ClientesModel
@{
    ViewData["Titulo"] = "";
}
<center>
    <div>
        <form method="POST"
              enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div class="table-container">
                <div class="table-header">
                    <h3 class="table-title">Gestión de Clientes</h3>
                    <div class="table-actions">
                        <button class="btn btn-primary btn-sm"
                                asp-page-handler="BtNuevo"
                                disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)">
                            + Registrar Cliente
                        </button>
                        <button class="btn btn-primary btn-sm"
                                asp-page-handler="BtExportar"
                                disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)">
                            📊 Exportar
                        </button>
                        <button class="btn btn-primary btn-sm"
                                asp-page-handler="BtRefrescar"
                                disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)">
                            ↺ Refrescar
                        </button>
                    </div>
                </div>
                
            </div>

            @if (Model!.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                        Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <div style="padding: 24px;">
                    <div class="search-bar">
                        <input id="flDocumento"
                               type="text" class="search-input"
                               placeholder="Documento"
                               asp-for="@Model.Filtro!.Documento">
                        <button class="btn btn-secondary btn-sm" asp-page-handler="BtRefrescar">🔍 Buscar</button>
                    </div>
                </div>
            }

            <div align="left">
                <h3>Clientes</h3>
            </div>

            @if (Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                        Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden"
                       asp-for="@Model.Actual!.Id" />
            }
            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden"
                       asp-for="@Model.Actual!.Nombre" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Apellido" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Documento" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Telefono" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Correo" />
            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Editar)
            {
                <div class='popup'>
                    <div class='pp_del_inner'>
                        <div style='width:95%'>
                            <div class="containers_vn panel panel-default">
                                <h3>Clientes</h3>

                                <div>
                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">
                                            Nombre
                                        </label>
                                        <div class="col-lg-6">
                                            <input id="nmNombre"
                                                   class="cts_forms form-control"
                                                   asp-for="@Model.Actual!.Nombre" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">
                                            Apellido
                                        </label>
                                        <div class="col-lg-6">
                                            <input id="nmApellido"
                                                   class="cts_forms form-control"
                                                   asp-for="@Model.Actual!.Apellido" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">
                                            Documento
                                        </label>
                                        <div class="col-lg-6">
                                            <input id="nmDocumento"
                                                   class="cts_forms form-control"
                                                   asp-for="@Model.Actual!.Documento" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">
                                            Telefono
                                        </label>
                                        <div class="col-lg-6">
                                            <input id="nmTelefono"
                                                   class="cts_forms form-control"
                                                   asp-for="@Model.Actual!.Telefono" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">
                                            Correo
                                        </label>
                                        <div class="col-lg-6">
                                            <input id="nmCorreo"
                                                   class="cts_forms form-control"
                                                   asp-for="@Model.Actual!.Correo" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button class="btn btn-primary btn-sm"
                                    asp-page-handler="BtGuardar"
                                    disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)">
                                ✓ Guardar
                            </button>
                            <button class="btn btn-primary btn-sm"
                                    asp-page-handler="BtCancelar"
                                    disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)">
                                ✕ Cancelar
                            </button>
                        </div>
                    </div>
                </div>
            }

            @if (ViewData.ContainsKey("Mensaje"))
            {
                <input type="hidden"
                       asp-for="@Model!.Accion" />
                @await Html.PartialAsync("../Emergentes/Mensajes.cshtml")
                ;
            }

            @if (Model!.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <div class='popup'>
                    <div class='pp_del_inner'>
                        <div style='width:95%'>
                            <h2 align="left">
                                Mensaje
                            </h2>

                            <h4 align="left">
                                ¿Desea borrar al cliente @Model.Actual!.Nombre @Model.Actual!.Apellido?
                            </h4>
                            <h6 align="left">
                                Documento @Model.Actual!.Documento
                            </h6>
                            <br />
                            <br />
                            <input type="submit"
                                   value="Borrar"
                                   asp-page-handler="BtBorrar"
                                   class="btn btn-secondary" />
                            <input type="submit"
                                   value="Cerrar"
                                   asp-page-handler="BtCancelar"
                                   class="btn btn-secondary" />
                        </div>
                    </div>
                </div>
            }

            @if (Model!.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Sublistas)
            {
                <div class='popup'>
                    <div class='pp_del_inner'>
                        <div style='width:95%'>
                            <h2 align="left">
                                Vehículos de @Model.Actual!.Nombre @Model.Actual!.Apellido
                            </h2>
                            <br>

                            <div class="containers_vn panel panel-default">
                                <table class="tb_data table table-striped table-bordered table hover">
                                    <thead>
                                        <tr>
                                            <th>Placa</th>
                                            <th>Marca</th>
                                            <th>Modelo</th>
                                        </tr>
                                    </thead>
                                    <tbody id="vervehiculosTable">
                                        @if (Model != null && Model.ListaV != null)
                                        {
                                            @foreach (var elemento in Model.ListaV)
                                            {
                                                <tr>
                                                    <td>
                                                        @elemento.Placa
                                                    </td>
                                                    <td>
                                                        @elemento.Marca
                                                    </td>
                                                    <td>
                                                        @elemento.Modelo
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <input type="submit"
                                   value="Cerrar"
                                   asp-page-handler="BtCancelar"
                                   class="btn btn-secondary" />
                        </div>
                    </div>
                </div>
            }

            @if (Model!.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                        Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <br />

                <div class="containers_vn panel panel-default">
                    <table class="tb_data table table-striped table-bordered table hover">
                        <thead>
                            <tr>
                                <th>Documento</th>
                                <th>Nombre</th>
                                <th>Correo</th>
                                <th>Teléfono</th>
                                <th>Vehiculos</th>
                                <th class="cl_actions">Acciones</th>
                            </tr>
                        </thead>
                        <tbody id="clientesTable">
                            @if (Model != null && Model.Lista != null)
                            {
                                @foreach (var elemento in Model.Lista)
                                {
                                    <tr>
                                        <td>
                                            @elemento.Documento
                                        </td>
                                        <td>
                                            @elemento.Nombre @elemento.Apellido
                                        </td>
                                        <td>
                                            @elemento.Correo
                                        </td>
                                        <td>
                                            @elemento.Telefono
                                        </td>
                                        <td>
                                            <button class="btn-icon" title="Ver-vehiculos" asp-page-handler="BtVerVehiculo" asp-route-id="@elemento.Id" asp-route-data="@elemento.Id">Ver Vehículos</button>
                                        </td>
                                        <td>
                                            <div class="action-buttons">
                                                <button class="btn-icon" title="Editar" asp-page-handler="BtModificar" asp-route-data="@elemento.Id">✏️</button>
                                                <button class="btn-icon" title="Eliminar" asp-page-handler="BtBorrarVal" asp-route-data="@elemento.Id">🗑️</button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            }
        </form>
    </div>
</center>