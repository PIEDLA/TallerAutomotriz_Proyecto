@page
@model asp_presentacion.Pages.Ventanas.SedesModel
@{
    ViewData["Titulo"] = "";
}
<center>
    <div>
        <form method="POST"
              enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div class="table-container">
                <div class="table-header">
                    <h3 class="table-title">Gestión de Sedes</h3>
                    <div class="table-actions">
                        <button class="btn btn-primary btn-sm"
                                asp-page-handler="BtNuevo"
                                disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)">
                            + Registrar Sede
                        </button>
                        <button class="btn btn-primary btn-sm"
                                asp-page-handler="BtExportar"
                                disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)">
                            📊 Exportar
                        </button>
                        <button class="btn btn-primary btn-sm"
                                asp-page-handler="BtRefrescar"
                                disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)">
                            ↺ Refrescar
                        </button>
                    </div>
                </div>
            </div>

            @if (Model!.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                        Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <div style="padding: 24px;">
                    <div class="search-bar">
                        <input id="flCiudad"
                               type="text" class="search-input"
                               placeholder="Ciudad"
                               asp-for="@Model.Filtro!.Ciudad">
                        <button class="btn btn-secondary btn-sm" asp-page-handler="BtRefrescar">🔍 Buscar</button>
                    </div>
                </div>
            }

            <div align="left">
                <h3>Sedes</h3>
            </div>

            @if (Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                        Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden"
                       asp-for="@Model.Actual!.Id" />
            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {


                <input type="hidden"
                       asp-for="@Model.Actual!.Nombre_sede" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Direccion" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Telefono" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Ciudad" />
            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Editar)
            {
                <div class='popup'>
                    <div class='pp_del_inner'>
                        <div style='width:95%'>
                            <div class="containers_vn panel panel-default">
                                <h3>Sedes</h3>

                                <div>
                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">
                                            Nombre
                                        </label>
                                        <div class="col-lg-6">
                                            <input id="nmNombre_sede"
                                                   class="cts_forms form-control"
                                                   asp-for="@Model.Actual!.Nombre_sede" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">
                                            Direccion
                                        </label>
                                        <div class="col-lg-6">
                                            <input id="nmDireccion"
                                                   class="cts_forms form-control"
                                                   asp-for="@Model.Actual!.Direccion" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">
                                            Telefono
                                        </label>
                                        <div class="col-lg-6">
                                            <input id="nmTelefono"
                                                   class="cts_forms form-control"
                                                   asp-for="@Model.Actual!.Telefono" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">
                                            Ciudad
                                        </label>
                                        <div class="col-lg-6">
                                            <input id="nmCiudad"
                                                   class="cts_forms form-control"
                                                   asp-for="@Model.Actual!.Ciudad" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="table-actions">
                                <button class="btn btn-primary btn-sm"
                                        asp-page-handler="BtGuardar"
                                        disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)">
                                    ✓ Guardar
                                </button>
                                <button class="btn btn-primary btn-sm"
                                        asp-page-handler="BtCancelar"
                                        disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)">
                                    ✕ Cancelar
                                </button>
                            </div>

                        </div>
                    </div>
                </div>
            }

            @if (ViewData.ContainsKey("Mensaje"))
            {
                <input type="hidden"
                       asp-for="@Model.Accion" />
                @await Html.PartialAsync("../Emergentes/Mensajes.cshtml")
                ;
            }

            @if (Model!.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Sublistas)
            {
                <div class='popup'>
                    <div class='pp_del_inner'>
                        <div style='width:95%'>
                            <h2 align="left">
                                Empleados de la sede @Model.Actual!.Nombre_sede
                            </h2>
                            <br>

                            <div class="containers_vn panel panel-default">
                                <table class="tb_data table table-striped table-bordered table hover">
                                    <thead>
                                        <tr>
                                            <th>Nombre</th>
                                            <th>Documento</th>
                                            <th>Cargo</th>
                                        </tr>
                                    </thead>
                                    <tbody id="vervehiculosTable">
                                        @if (Model != null && Model.ListaE != null)
                                        {
                                            @foreach (var elemento in Model.ListaE)
                                            {
                                                <tr>
                                                    <td>
                                                        @elemento.Nombre @elemento.Apellido
                                                    </td>
                                                    <td>
                                                        @elemento.Documento
                                                    </td>
                                                    <td>
                                                        @elemento.Cargo
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <input type="submit"
                                   value="Cerrar"
                                   asp-page-handler="BtCancelar"
                                   class="btn btn-secondary" />
                        </div>
                    </div>
                </div>
            }

            @if (Model!.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <div class='popup'>
                    <div class='pp_del_inner'>
                        <div style='width:95%'>
                            <h2 align="left">
                                Mensaje
                            </h2>

                            <h4 align="left">
                                ¿Desea borrar la sede @Model.Actual!.Nombre_sede?
                            </h4>
                            <br />
                            <br />
                            <div class="table-actions">
                                <input type="submit"
                                       value="Borrar"
                                       asp-page-handler="BtBorrar"
                                       class="btn btn-secondary" />
                                <input type="submit"
                                       value="Cerrar"
                                       asp-page-handler="BtCancelar"
                                       class="btn btn-secondary" />
                            </div>
                        </div>
                    </div>
                </div>
            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                        Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <div class="containers_vn panel panel-default">
                    <table class="tb_data table table-striped table-bordered table hover">
                        <tr>
                            <th>
                                Nombre
                            </th>
                            <th>
                                Direccion
                            </th>
                            <th>
                                Telefono
                            </th>
                            <th>
                                Ciudad
                            </th>
                            <th>
                                Empleados
                            </th>
                            <th class="cl_actions">
                                Accion
                            </th>
                        </tr>
                        
                        @if (Model != null && Model.Lista != null)
                        {
                            @foreach (var elemento in Model.Lista)
                            {
                                <tr>
                                    <td>
                                        @elemento.Nombre_sede
                                    </td>
                                    <td>
                                        @elemento.Direccion
                                    </td>
                                    <td>
                                        @elemento.Telefono
                                    </td>
                                    <td>
                                        @elemento.Ciudad
                                    </td>
                                    <td>
                                        <button class="btn-icon" title="Ver empleados" asp-page-handler="BtVerEmpleados" asp-route-id="@elemento.Id">Ver Empleados</button>
                                    </td>
                                    <td>
                                        <div class="action-buttons">
                                            <button class="btn-icon" title="Editar" asp-page-handler="BtModificar" asp-route-data="@elemento.Id">✏️</button>
                                            <button class="btn-icon" title="Eliminar" asp-page-handler="BtBorrarVal" asp-route-data="@elemento.Id">🗑️</button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </table>
                </div>
            }
        </form>
    </div>
</center>