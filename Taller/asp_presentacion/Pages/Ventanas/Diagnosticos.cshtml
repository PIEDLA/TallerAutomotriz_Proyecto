@page
@model asp_presentacion.Pages.Ventanas.DiagnosticosModel
@{
    ViewData["Titulo"] = "";
}
<center>
    <div>
        <form method="POST">
            @Html.AntiForgeryToken()

            <div align="left">
                <h3>Diagnosticos</h3>
            </div>


            <div align="left" 
                class="bt_panel_buttons">
                <input type="submit"
                       value="Refrescar"
                       asp-page-handler="BtRefrescar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

                <input type="submit"
                       value="Nuevo"
                       asp-page-handler="BtNuevo"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

                <input type="submit"
                       value="Guardar"
                       asp-page-handler="BtGuardar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />

                <input type="submit"
                       value="Cancelar"
                       asp-page-handler="BtCancelar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
            </div>


            @if (Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                        Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden" asp-for="@Model.Actual!.Id" />
            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden" asp-for="@Model.Actual!.Descripcion" />
                <input type="hidden" asp-for="@Model.Actual!.Fecha" />
                <input type="hidden" asp-for="@Model.Actual!.Id_vehiculo" />
                <input type="hidden" asp-for="@Model.Actual!.Id_empleado" />
            }


            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Editar)
            {
                <div class="containers_vn panel panel-default">
                    <h3>Diagnosticos</h3>


                    <div class="form-group">
                        <label class="col-lg-4 control-label">
                            Vehículo
                        </label>
                        <div class="col-lg-6">
                            <select asp-for="@Model.Actual!.Id_vehiculo"
                                    class="cts_forms form-control">
                                <option value="">Seleccione...</option>
                                @foreach (var v in Model.Vehiculos!)
                                {
                                    <option value="@v.Id">@v.Placa</option>
                                }
                            </select>
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="col-lg-4 control-label">
                            Empleado
                        </label>
                        <div class="col-lg-6">
                            <select asp-for="@Model.Actual!.Id_empleado"
                                    class="cts_forms form-control">
                                <option value="">Seleccione...</option>
                                @foreach (var e in Model.Empleados!)
                                {
                                    <option value="@e.Id">@e.Nombre</option>
                                }
                            </select>
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="col-lg-4 control-label">
                            Fecha
                        </label>
                        <div class="col-lg-6">
                            <input type="date"
                                   asp-for="@Model.Actual!.Fecha"
                                   class="cts_forms form-control" />
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="col-lg-4 control-label">
                            Descripción
                        </label>
                        <div class="col-lg-6">
                            <textarea asp-for="@Model.Actual!.Descripcion"
                                      class="cts_forms form-control"></textarea>
                        </div>
                    </div>
                </div>
            }

            @if (ViewData.ContainsKey("Mensaje"))
            {
                <input type="hidden"
                    asp-for="@Model.Accion" />
                @await Html.PartialAsync("../Emergentes/Mensajes.cshtml")
            }


            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <div class='popup'>
                    <div class='pp_del_inner'>
                        <div style='width:95%'>
                            <h2 align="left">Mensaje</h2>

                            <h4 align="left">
                                ¿Desea borrar el diagnóstico?
                            </h4>

                            <h6 align="left">
                                @Model.Actual!.Descripcion
                            </h6>

                            <br />
                            <input type="submit"
                                   value="Borrar"
                                   asp-page-handler="BtBorrar"
                                   class="btn btn-secondary" />

                            <input type="submit"
                                   value="Cerrar"
                                   asp-page-handler="BtCancelar"
                                   class="btn btn-secondary" />
                        </div>
                    </div>
                </div>
            }


            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                        Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <div class="containers_vn panel panel-default">

                    <h4>Filtros</h4>


                    <select asp-for="@Model.Filtro!.Id_vehiculo"
                            class="cts_forms form-control">
                        <option value="">-- Vehículo --</option>
                        @foreach (var v in Model.Vehiculos!)
                        {
                            <option value="@v.Id">@v.Placa</option>
                        }
                    </select>
                    <br />


                    <select asp-for="@Model.Filtro!.Id_empleado"
                            class="cts_forms form-control">
                        <option value="">-- Empleado --</option>
                        @foreach (var e in Model.Empleados!)
                        {
                            <option value="@e.Id">@e.Nombre</option>
                        }
                    </select>
                    <br />


                    <input type="date"
                           asp-for="@Model.Filtro!.Fecha"
                           class="cts_forms form-control" />
                    <br />


                    <input class="cts_forms form-control"
                           asp-for="@Model.Filtro!.Descripcion"
                           placeholder="Descripción" />
                    <br />

  
                    <table class="tb_data table table-striped table-bordered table-hover">
                        <tr>
                            <th>Vehículo</th>
                            <th>Empleado</th>
                            <th>Fecha</th>
                            <th>Descripción</th>
                            <th class="cl_actions">Accion</th>
                        </tr>

                        @if (Model.Lista != null)
                        {
                            @foreach (var elemento in Model.Lista)
                            {
                                <tr>
                                    <td>@elemento._Vehiculo?.Placa</td>
                                    <td>@elemento._Empleado?.Nombre</td>
                                    <td>@elemento.Fecha.ToShortDateString()</td>
                                    <td>@elemento.Descripcion</td>

                                    <td>
                                        <input type="submit"
                                               value="Modificar"
                                               asp-page-handler="BtModificar"
                                               class="btn btn-secondary"
                                               asp-route-data="@elemento.Id" />

                                        <input type="submit"
                                               value="Borrar"
                                               asp-page-handler="BtBorrarVal"
                                               class="btn btn-secondary"
                                               asp-route-data="@elemento.Id" />
                                    </td>
                                </tr>
                            }
                        }
                    </table>
                </div>
            }

        </form>
    </div>
</center>
