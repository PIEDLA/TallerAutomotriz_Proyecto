@page
@model asp_presentacion.Pages.Ventanas.Reparacion_HerramientaModel
@{
    ViewData["Titulo"] = "";
}

<center>
    <div>
        <form method="POST" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div align="left">
                <h3>Reparacion_Herramienta</h3>
            </div>

            <div align="left" class="bt_panel_buttons">
                <input type="submit" value="Refrescar" asp-page-handler="BtRefrescar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit" value="Nuevo" asp-page-handler="BtNuevo"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit" value="Guardar" asp-page-handler="BtGuardar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit" value="Cancelar" asp-page-handler="BtCancelar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
            </div>

            @if (Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                        Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden" asp-for="@Model.Actual!.Id" />
            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden" asp-for="@Model.Actual!.Id_reparacion" />
                <input type="hidden" asp-for="@Model.Actual!.Id_herramienta" />
            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Editar)
            {
                <div class="containers_vn panel panel-default">
                    <h3>Reparacion_Herramienta</h3>

                    <div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">ID Reparación</label>
                            <div class="col-lg-6">
                                <input class="cts_forms form-control" asp-for="@Model.Actual!.Id_reparacion" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-4 control-label">ID Herramienta</label>
                            <div class="col-lg-6">
                                <input class="cts_forms form-control" asp-for="@Model.Actual!.Id_herramienta" />
                            </div>
                        </div>
                    </div>
                </div>
            }

            @if (ViewData.ContainsKey("Mensaje"))
            {
                <input type="hidden" asp-for="@Model.Accion" />
                @await Html.PartialAsync("../Emergentes/Mensajes.cshtml")
            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <div class='popup'>
                    <div class='pp_del_inner'>
                        <div style='width:95%'>
                            <h2 align="left">Mensaje</h2>
                            <h4 align="left">Desea borrar esta relación de reparación?</h4>
                            <h6 align="left">@Model.Actual!.Id_reparacion - @Model.Actual!.Id_herramienta</h6>
                            <br /><br />
                            <input type="submit" value="Borrar" asp-page-handler="BtBorrar" class="btn btn-secondary" />
                            <input type="submit" value="Cerrar" asp-page-handler="BtCancelar" class="btn btn-secondary" />
                        </div>
                    </div>
                </div>
            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                        Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <div class="containers_vn panel panel-default">
                    <h4>Filtros</h4>

                    <input class="cts_forms form-control" asp-for="@Model.Filtro!.Id_reparacion" placeholder="ID Reparación (opcional)" />
                    <br />
                    <input class="cts_forms form-control" asp-for="@Model.Filtro!.Id_herramienta" placeholder="ID Herramienta (opcional)" />
                    <br />

                    <table class="tb_data table table-striped table-bordered table-hover">
                        <tr>
                            <th>ID Reparación</th>
                            <th>ID Herramienta</th>
                            <th class="cl_actions">Accion</th>
                        </tr>

                        @if (Model.Lista != null)
                        {
                            @foreach (var rh in Model.Lista)
                            {
                                <tr>
                                    <td>@rh.Id_reparacion</td>
                                    <td>@rh.Id_herramienta</td>
                                    <td>
                                        <input type="submit" value="Modificar" asp-page-handler="BtModificar"
                                               class="btn btn-secondary" asp-route-data="@rh.Id" />
                                        <input type="submit" value="Borrar" asp-page-handler="BtBorrarVal"
                                               class="btn btn-secondary" asp-route-data="@rh.Id" />
                                    </td>
                                </tr>
                            }
                        }
                    </table>
                </div>
            }
        </form>
    </div>
</center>
