@page
@model asp_presentacion.Pages.Ventanas.ReparacionesModel
@{
    ViewData["Titulo"] = "";
}
<center>
    <div>
        <form method="POST"
              enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div align="left">
                <h3>Reparaciones</h3>
            </div>
            <div align="left"
                 class="bt_panel_buttons">
                <input type="submit"
                       value="Refrescar"
                       asp-page-handler="BtRefrescar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Nuevo"
                       asp-page-handler="BtNuevo"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Guardar"
                       asp-page-handler="BtGuardar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Cancelar"
                       asp-page-handler="BtCancelar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
            </div>

            @if (Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                        Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden"
                       asp-for="@Model.Actual!.Id" />
            }
            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden"
                       asp-for="@Model.Actual!.Id_diagnostico" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Descripcion_trabajo" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Costo_estimado" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Fecha_inicio" />
            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Editar)
            {
                <div class="containers_vn panel panel-default">
                    <h3>Reparaciones</h3>

                    <div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                ID Diagnóstico
                            </label>
                            <div class="col-lg-6">
                                <input id="nmId_diagnostico"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.Id_diagnostico" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Costo Estimado
                            </label>
                            <div class="col-lg-6">
                                <input id="nmCosto_estimado"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.Costo_estimado" />
                            </div>
                        </div>
                            <div class="form-group">
                                <label class="col-lg-4 control-label">
                                    Descripcion Trabajo
                                </label>
                                <div class="col-lg-6">
                                    <input id="nmDescripcion_trabajo"
                                           class="cts_forms form-control"
                                           asp-for="@Model.Actual!.Descripcion_trabajo" />
                                </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Fecha de Inicio
                            </label>
                            <div class="col-lg-6">
                                       id="nmFecha_inicio"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.Fecha_inicio" />
                            </div>
                        </div>
                    </div>
                </div>
            }

            @if (ViewData.ContainsKey("Mensaje"))
            {
                <input type="hidden"
                       asp-for="@Model.Accion" />
                @await Html.PartialAsync("../Emergentes/Mensajes.cshtml")
                ;
            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <div class='popup'>
                    <div class='pp_del_inner'>
                        <div style='width:95%'>
                            <h2 align="left">
                                Mensaje
                            </h2>

                            <h4 align="left">
                                ¿Desea borrar la reparación?
                            </h4>
                            <h6 align="left">
                                Diagnóstico #@Model.Actual!.Id_diagnostico - @Model.Actual!.Descripcion_trabajo
                            </h6>
                            <br />
                            <br />
                            <input type="submit"
                                   value="Borrar"
                                   asp-page-handler="BtBorrar"
                                   class="btn btn-secondary" />
                            <input type="submit"
                                   value="Cerrar"
                                   asp-page-handler="BtCancelar"
                                   class="btn btn-secondary" />
                        </div>
                    </div>
                </div>
            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                        Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <div class="containers_vn panel panel-default">
                    <h4>Filtros</h4>

                    <input id="flId_diagnostico"
                                         class="cts_forms form-control"
                                         asp-for="@Model.Filtro!.Id_diagnostico"
                                         placeholder="ID Diagnóstico" />
                    <br />

                    <input id="flCosto_estimado"
                                         class="cts_forms form-control"
                                         asp-for="@Model.Filtro!.Costo_estimado"
                                         placeholder="Costo Estimado" />
                    <br />


                    <table class="tb_data table table-striped table-bordered table hover">
                        <tr>
                            <th>ID Diagnóstico</th>
                            <th>Descripción Trabajo</th>
                            <th>Costo Estimado</th>
                            <th>Fecha de Inicio</th>
                            <th class="cl_actions">Accion</th>
                        </tr>
                        @if (Model != null && Model.Lista != null)
                        {
                            @foreach (var elemento in Model.Lista)
                            {
                                <tr>
                                    <td>@elemento.Id_diagnostico</td>
                                    <td>@elemento.Descripcion_trabajo</td>
                                    <td>@elemento.Costo_estimado.</td>
                                    <td>@elemento.Fecha_inicio.</td>
                                    <td>
                                        <input type="submit"
                                                                       value="Modificar"
                                                                       asp-page-handler="BtModificar"
                                                                       class="btn btn-secondary"
                                                                       asp-route-data="@elemento.Id" />
                                        <input type="submit"
                                                                       value="Borrar"
                                                                       asp-page-handler="BtBorrarVal"
                                                                       class="btn btn-secondary"
                                                                       asp-route-data="@elemento.Id" />
                                    </td>
                                </tr>
                            }
                        }
                    </table>
                </div>
            }
        </form>
    </div>
</center>