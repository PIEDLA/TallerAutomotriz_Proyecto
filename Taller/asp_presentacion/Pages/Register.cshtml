@page
@model RegisterModel
@{
    ViewData["Title"] = "";
}

@if (!Model.Registrado)
{
    <div class="container"
         align="left"
         style="width:100%">
        <h3>
            Registro
        </h3>

        <form method="POST">
            <div style="width:60%">

                <div class="form-group">
                    <label class="control-label">
                        Usuario:
                    </label>
                    <input onchange="keyUp(this)"
                           asp-for="@Model.Nombre"
                           class="form-control" />
                </div>

                <div class="form-group">
                    <label class="control-label">
                        Contraseña:
                    </label>
                    <input type="password"
                           onchange="keyUp(this)"
                           asp-for="@Model.Contraseña"
                           class="form-control" />
                </div>

                <div class="form-group">
                    <label class="control-label">
                        Función (número):
                    </label>
                    <input type="number"
                           onchange="keyUp(this)"
                           asp-for="@Model.Funcion"
                           class="form-control" />
                </div>

                <input type="submit"
                       value="Limpiar"
                       asp-page-handler="BtClean"
                       class="btn btn-default" />

                <input type="submit"
                       value="Registrar"
                       asp-page-handler="BtRegister"
                       class="btn btn-default" />

            </div>
        </form>
    </div>
}
else
{
    <div class="text-center">
        <h1 class="display-4">
            Registro exitoso
        </h1>

        <a class="btn btn-default" href="/Index">
            Ir al Login
        </a>
    </div>
}
