<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - asp_presentacion</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/asp_presentacion.styles.css" asp-append-version="true" />
</head>

<body>
    <div class="dashboard">

        <!-- SIDEBAR -->
        <aside class="sidebar collapsed" id="sidebar">
            <button class="toggle-sidebar-btn" id="toggleSidebar">
                ☰
            </button>

            <div class="container_menu menu">
                <div class="sidebar-header mb-3">
                    <a class="navbar-brand text" asp-area="" asp-page="/Index">
                        TALLER MECÁNICO MEDITERRANEO
                    </a>
                </div>

                <ul class="list-unstyled">
                    <li>
                        <a class="nav-link text-dark menu-item" asp-page="/Index" title="Home">
                            <span class="menu-icon">📊</span> <span class="text">Home</span>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link text-dark menu-item" asp-page="/Index" title="Usuario">
                            <span class="menu-icon">👤</span> <span class="text">Usuario</span>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link text-dark menu-item" asp-page="/Ventanas/Sedes" title="Sedes">
                            <span class="menu-icon">🏢</span> <span class="text">Sedes</span>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link text-dark menu-item" asp-page="/Ventanas/Clientes" title="Clientes">
                            <span class="menu-icon">👥</span> <span class="text">Clientes</span>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link text-dark menu-item" asp-page="/Ventanas/Vehiculos" title="Vehículos">
                            <span class="menu-icon">🚗</span> <span class="text">Vehículos</span>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link text-dark menu-item" asp-page="/Ventanas/Proveedores" title="Proveedores">
                            <span class="menu-icon">🏢</span> <span class="text">Proveedores</span>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link text-dark menu-item" asp-page="/Ventanas/Productos" title="Productos">
                            <span class="menu-icon">📦</span> <span class="text">Productos</span>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link text-dark menu-item" asp-page="/Ventanas/Empleados" title="Empleados">
                            <span class="menu-icon">👨‍🔧</span> <span class="text">Empleados</span>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link text-dark menu-item" asp-page="/Ventanas/Reservas" title="Reservas">
                            <span class="menu-icon">📅</span> <span class="text">Reservas</span>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link text-dark menu-item" asp-page="/Ventanas/Facturacion" title="Facturación">
                            <span class="menu-icon">💰</span> <span class="text">Facturación</span>
                        </a>
                    </li>
                    @* <li>
                        <a class="nav-link text-dark menu-item" asp-page="/Privacy">
                            <span class="menu-icon">📈</span> <span class="text">Privacy</span>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link text-dark menu-item" asp-page="">
                            <span class="menu-icon">⚙️</span> <span class="text">Configuración</span>
                        </a>
                    </li> *@
                </ul>
            </div>
        </aside>

        <!-- CONTENIDO -->
        <div id="content">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted mt-3">
        <div class="container">
            &copy; 2025 - asp_presentacion - <a asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
